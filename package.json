{
  "name": "grnsw-spfx-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "GRNSW SharePoint Framework monorepo for track conditions, race management, greyhound health, and GAP solutions",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:shared": "npm run build -w @grnsw/shared",
    "build:track": "npm run build:shared && npm run build -w @grnsw/track-conditions-spfx",
    "build:race": "npm run build:shared && npm run build -w @grnsw/race-management-spfx",
    "build:health": "npm run build:shared && npm run build -w @grnsw/greyhound-health-spfx",
    "build:gap": "npm run build:shared && npm run build -w @grnsw/gap-spfx",
    "clean": "npm run clean --workspaces",
    "serve": "echo 'Choose a specific package to serve' && exit 1",
    "serve:track": "npm run serve -w @grnsw/track-conditions-spfx",
    "serve:race": "npm run serve -w @grnsw/race-management-spfx",
    "serve:health": "npm run serve -w @grnsw/greyhound-health-spfx",
    "serve:gap": "npm run serve -w @grnsw/gap-spfx",
    "test": "npm run test --workspaces",
    "package-all": "npm run package-solution --workspaces",
    "release": "node scripts/release.js",
    "version:track": "cd packages/track-conditions-spfx && npm version",
    "version:race": "cd packages/race-management-spfx && npm version",
    "version:health": "cd packages/greyhound-health-spfx && npm version",
    "version:gap": "cd packages/gap-spfx && npm version",
    "fix-builds": "node scripts/fix-spfx-builds.js",
    "setup": "npm install && npm run fix-builds && npm run build:shared"
  },
  "devDependencies": {
    "@microsoft/eslint-config-spfx": "1.21.1",
    "@microsoft/eslint-plugin-spfx": "1.21.1",
    "@microsoft/rush-stack-compiler-4.7": "^0.1.1",
    "@microsoft/rush-stack-compiler-5.3": "0.1.0",
    "@microsoft/sp-build-web": "1.21.1",
    "@microsoft/sp-module-interfaces": "1.21.1",
    "@rushstack/eslint-config": "4.0.1",
    "@types/react": "17.0.45",
    "@types/react-dom": "17.0.17",
    "@types/webpack-env": "~1.15.2",
    "ajv": "^6.12.5",
    "eslint": "8.57.1",
    "eslint-plugin-react-hooks": "4.3.0",
    "gulp": "4.0.2",
    "typescript": "~5.3.3"
  },
  "engines": {
    "node": ">=22.14.0 < 23.0.0"
  }
}

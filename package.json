{
  "name": "grnsw-spfx-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "GRNSW SharePoint Framework monorepo for weather, race management, and greyhound health solutions",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:weather": "npm run build -w @grnsw/weather-spfx",
    "build:race": "npm run build -w @grnsw/race-management-spfx",
    "build:health": "npm run build -w @grnsw/greyhound-health-spfx",
    "clean": "npm run clean --workspaces",
    "serve": "echo 'Choose a specific package to serve' && exit 1",
    "serve:weather": "npm run serve -w @grnsw/weather-spfx",
    "serve:race": "npm run serve -w @grnsw/race-management-spfx",
    "serve:health": "npm run serve -w @grnsw/greyhound-health-spfx",
    "test": "npm run test --workspaces",
    "package-all": "npm run package-solution --workspaces"
  },
  "devDependencies": {
    "@microsoft/eslint-config-spfx": "1.21.1",
    "@microsoft/eslint-plugin-spfx": "1.21.1",
    "@microsoft/rush-stack-compiler-5.3": "0.1.0",
    "@microsoft/sp-build-web": "1.21.1",
    "@microsoft/sp-module-interfaces": "1.21.1",
    "@rushstack/eslint-config": "4.0.1",
    "@types/react": "17.0.45",
    "@types/react-dom": "17.0.17",
    "@types/webpack-env": "~1.15.2",
    "ajv": "^6.12.5",
    "eslint": "8.57.1",
    "eslint-plugin-react-hooks": "4.3.0",
    "gulp": "4.0.2",
    "typescript": "~5.3.3"
  },
  "engines": {
    "node": ">=22.14.0 < 23.0.0"
  }
}